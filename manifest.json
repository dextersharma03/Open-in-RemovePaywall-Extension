{
    "manifest_version": 3,
    "name": "Open with RemovePaywall",
    "version": "1.0.0",
    "description": "Adds a context menu option to open the current page with removepaywall.com.",
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_icon": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
    }
  }
  